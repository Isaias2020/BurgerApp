<div class="row">
    <div class="col-centered">
        <h1>Eat Da Burger!</h1>
        <img src="https://www.fastfoodcalories.com/wp-content/uploads/2019/03/Whataburger-Patty-Melt-696x291.jpg"
            alt="Patty Melt"></img>
    </div>
</div>

<div class="col-notcentered">
    <div class="row">
        <div class="col">
            <h2>Burgers waiting!</h2>
            <ol>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ol>
        </div>

        <div class="col">
            <h2>Devoured!</h2>
            <ol>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ol>
        </div>
    </div>
</div>
</div>

<div class="row">
    <div class="col-centered">
        <form class="create-form">

            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" id="ca" name="burger_name" class="form-control">
            </div>
            <div class="form-group d-none">
                <label for="sleepy">Devoured?</label><br>
                <input type="radio" name="sleepy" value="1" checked> Devoured!<br>
                <input type="radio" name="sleepy" value="0"> Not Devoured
            </div>

            <button type="submit">Add a burger</button>

        </form>
    </div>